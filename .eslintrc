{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "jest": true
    },
    "extends": "airbnb",
    "rules": {
        "indent": [
            2
        ],
        "class-methods-use-this": [
            0
        ],
        "no-console": "off",
        "jsx-a11y/anchor-is-valid": [
            "error",
            {
                "components": [
                    "Link"
                ],
                "specialLink": [
                    "to"
                ]
            }
        ],
        "react/forbid-prop-types": [
            "error",
            {
                "forbid": [
                    "any",
                    "array"
                ]
            }
        ]
    }
}